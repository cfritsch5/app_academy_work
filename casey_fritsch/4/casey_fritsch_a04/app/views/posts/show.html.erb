  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="tag[post_id]" value="<%=  @post.id  %>">
  <label>Tag Name
    <input type="text" name="tag[name]" value="">
  </label>

  <label>Body
    <input type="text" name="post[body]" value="">
