<h1>Posts#show</h1>
<%=  @post.title  %>
<%=  @post.body  %>
<%=  @post.user.username  %>

<%= link_to "Edit Post", edit_post_url %>

<% @post.tags.each do |tag| %>
<%= tag.name%>
<%= link_to "Remove Tag", tag_url, method: :delete %>
